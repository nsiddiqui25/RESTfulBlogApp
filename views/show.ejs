<% include ./partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header">
        <%= blog.title %>
    </div>
    <div class="ui top attached segment">
        <div class="item">
            <img class="ui centered rounded image" src="<%= blog.image %>">
            <div class="content">
                <span><%= blog.created.toDateString() %></span>
            </div>
            <div class="description">
                <!--<p>< %= blog.body %></p> ==/ changing the = to a -(dash) will allow the rendering of code, allowing user to style the content, instead of returning it as a string (with no formatting) \==-->
                <p><%- blog.body %></p>
            </div>
            <a class="ui green basic button" href="/blogs/<%= blog._id %>/edit">Edit</a>
            <form id="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
                <button class="ui red basic button">Delete</button>
            </form>
        </div>
    </div>
</div>
<% include ./partials/footer %>